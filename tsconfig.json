{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "baseUrl": "src",
    "outDir": "build",
    "paths": {}
  },
  "include": ["src/**/*", "src/ViCode.ts"],
  "exclude": ["node_modules", ".yarn", "script", "build"]
}
